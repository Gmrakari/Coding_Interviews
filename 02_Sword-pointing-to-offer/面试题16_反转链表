#题意
题目描述

输入一个链表，反转链表后，输出链表的所有元素。

struct ListNode
{
	int m_nKey;
	ListNode* m_pNext;
};

class Solution
{
public:
	ListNode* ReverseList(ListNode* pListHead)
	{
		ListNode* pNode = pListHead->m_pNext;
		pListHead->m_pNext = NULL;
		ListNode* pCurrent = NULL;

		while(pNode != NULL)
		{
			pCurrent = pNode;
			pNode = pNode->m_pNext;
			pCurrent->m_pNext = pListHead->m_pNext;
			pListHead->m_pNext = pCurrent;
		}	
	}
};

ListNode* ReverseList(ListNode* pHead)
{
	ListNode* pReverseHead = NULL;
	ListNode* pNode = pHead;
	ListNode* pPrev = NULL;

	while(pNode != NULL)
	{
		ListNode* pNext = pNode->m_pNext;

		if(pNext == NULL)
			pReverseHead = pNode;

		pNode->m_pNext = pPrev;

		pPrev = pNode;
		pNode = pNext;
	}
	return pReverseHead;
}

